(defchain main-chain
  20 = .max
  1 >= .result

  (ForRange
   1 .max
   (-> >= .n
       .result >= .previous
       (When
        (-> .result (Math.Mod .n) (IsMore 0))
        (Repeat
         (-> .result (Math.Add .previous) > .result)
         :Forever true
         :Until (-> .result (Math.Mod .n) (Is 0))))))

  .result (Assert.Is 232792560 true)
  (Log "Answer"))

(defnode root)
(schedule root main-chain)
(run root)
